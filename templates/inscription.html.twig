{% extends "base.html.twig" %}


{% block body %}
    <div>
        <h3 class="header center green-text">Inscription</h3>
    </div>
    <div class="row" id="rangee">
        <div id="colonne" class="col-sm-8">
            {{ form_start(formUser) }}
            {# iterate over each existing tag and render its only field: name #}
                <div class="form-group">
                    <div class="form">
                        {{ form_row(formUser.firstName, {'label':'Prénom', 'attr': {'placeholder': "Prénom"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form">
                        {{ form_row(formUser.lastName, {'label':'Nom', 'attr': {'placeholder': "Nom"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form">
                        {{ form_row(formUser.birthDate, {'label':'Date de naissance'}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form">
                        {{ form_row(formUser.email, {'label':'Email', 'attr': {'placeholder': "Votre adresse email"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form">
                        {{ form_row(formUser.password, {'label':'Mot de passe', 'attr': {'placeholder': "Votre mot de passe"}}) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-success">{{"Valider"}}</button>
            {{ form_end(formUser) }}
        </div>
    </div>

{% endblock %}