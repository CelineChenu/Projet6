{% extends 'base.html.twig' %}

{% block title %}
    Hello world
{% endblock %}

{% block body %}

    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <h1 class="header center orange-text">Liste des événements</h1>
            <div class="row center">
                <h5 class="header col s12 light">Choisi ton destin</h5>
            </div>
            <div class="row center">
                {% for event in events %}
                    <tr>
                        <td><div class="champ"> {{ "Restaurant"|trans}} : {{ event.restaurant.name }}</td>
                        <td><div class="button">
                            <a href="{{ path('eventpage',{ id: event.id }) }}" class="btn btn-default btn-xs">Voir l'événement</a>
                            </div></td>
                    </tr>
                {% endfor %}
            </div>
            <br><br>

        </div>
    </div>

    <footer class="page-footer orange">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Company Bio</h5>
                    <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>


                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Made by <a class="orange-text text-lighten-3" href="http://materializecss.com">Materialize</a>
            </div>
        </div>
    </footer>
{% endblock %}